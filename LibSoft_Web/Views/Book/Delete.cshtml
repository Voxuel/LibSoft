@model LibSoft_Models.BookDTO

@{
    ViewData["Title"] = "Delete Book";
}

<div class="row">
    <form asp-action="DeleteBook">
        <input asp-for="Id" hidden/>
        <div class="container border p-3">
            <div class="col-2">
                <label asp-for="Title" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="Author" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Author" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="Year" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Year" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="Genre" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Genre" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="NumbersInStock" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NumbersInStock" disabled class="form-control"/>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger"/>
                <a asp-action="BookIndex">Back to list</a>
            </div>
        </div>
    </form>
</div>